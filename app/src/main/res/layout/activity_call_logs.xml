<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vinayshanthagiri.btcon.callLogs"
    android:background="#5187c2">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh Call Logs"
        android:id="@+id/changeNmBt"
        android:background="#bdd3eb"
        android:layout_margin="10dp"
        android:padding="10dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Call Logs"
        android:id="@+id/textView"
        android:layout_below="@+id/changeNmBt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_marginTop="120dp"
        android:backgroundTint="@color/material_blue_grey_950">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call logs for &quot;12345&quot;"
        android:id="@+id/calllog_txt"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#a9d0fb" />

    </ScrollView>




</RelativeLayout>
